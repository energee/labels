-
  var beers = [
    {
      title: 'Name',
      description: 'description',
    }
  ]
doctype html
head
  title Beer labels
  meta(http-equiv='content-type' content='text/html; charset=utf-8')
  link(href='app/app.css' media='screen, projection, print' rel='stylesheet' type='text/css')
  link(href='app/buttons.css' media='screen' rel='stylesheet' type='text/css')
  link(rel='icon' type='image/svg+xml' href='app/img/Lower Level icon.svg')
  script(src='app/app.js')
body#app
  .control-panel
    #title-adjust
      label(for="title") Title Size
      input.font-adjust(type="number" id="title" value="50")
    #description-adjust
      label(for="description") Description Size
      input.font-adjust(type="number" id="description" value="16")
  #main.page
    each beer, key in beers
      .label(id=key)
        h1.title(contenteditable="true" id='title'+key class='content')= beer.title
        figcaption.description(contenteditable="true" id='description'+key class='content')= beer.description
        img.image-upload(src)
        img.image(src="app/img/Lolev_logo.svg")
